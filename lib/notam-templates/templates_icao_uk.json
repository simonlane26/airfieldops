  "templates": {
    "runwayClosure": {
      "full": "RWY {runway} CLSD {reason}",
      "timed": "RWY {runway} CLSD {startTime} TIL {endTime} {reason}",
      "daily": "RWY {runway} CLSD DLY {startTime}-{endTime} {reason}",
      "exceptWeekend": "RWY {runway} CLSD DLY EXC SAT SUN {startTime}-{endTime} {reason}"
    },

    "runwayReopen": {
      "immediate": "RWY {runway} AVBL",
      "timed": "RWY {runway} AVBL FM {time}"
    },

    "runwayReduced": {
      "length": "RWY {runway} REDUCED TO {length}M AVBL",
      "width": "RWY {runway} WIDTH REDUCED TO {width}M",
      "displaced": "RWY {runway} THR DSPLCD {distance}M"
    },

    "taxiwayClosure": {
      "full": "TWY {taxiway} CLSD {reason}",
      "timed": "TWY {taxiway} CLSD {startTime} TIL {endTime} {reason}",
      "section": "TWY {taxiway} CLSD BTN {pointA} AND {pointB} {reason}"
    },

    "taxiwayReopen": {
      "immediate": "TWY {taxiway} AVBL",
      "timed": "TWY {taxiway} AVBL FM {time}"
    },

    "apronClosure": {
      "full": "APN {apron} CLSD {reason}",
      "partial": "APN {apron} STANDS {stands} CLSD {reason}",
      "timed": "APN {apron} CLSD {startTime} TIL {endTime} {reason}"
    },

    "workInProgress": {
      "runway": "RWY {runway} WIP {description}. {restrictions}",
      "taxiway": "TWY {taxiway} WIP {description}. {restrictions}",
      "apron": "APN {apron} WIP {description}. {restrictions}",
      "general": "WIP {location} {description}. {restrictions}"
    },

    "surfaceCondition": {
      "contaminated": "RWY {runway} {contaminant} {coverage}PCT {depth}MM",
      "friction": "RWY {runway} MEASURED FRICTION COEFFICIENT {value}",
      "braking": "RWY {runway} BA {action} {value}",
      "snowtam": "SNOWTAM {number} FOR {icao}"
    },

    "lighting": {
      "unserviceable": "RWY {runway} {lightType} LGT U/S",
      "reduced": "RWY {runway} {lightType} LGT INTENSITY RED",
      "available": "RWY {runway} {lightType} LGT AVBL"
    },

    "navaid": {
      "unserviceable": "{navaid} {ident} U/S",
      "test": "{navaid} {ident} ON TEST DO NOT USE",
      "available": "{navaid} {ident} AVBL"
    },

    "firefighting": {
      "reduced": "AD RFFS CAT RED FM {category} TO {reducedCategory}",
      "restored": "AD RFFS CAT {category} RESTORED",
      "minimum": "AD RFFS BELOW MINIMUM CATEGORY"
    },

    "lowVisibility": {
      "inForce": "AD LVP IN FORCE",
      "cancelled": "AD LVP CNL",
      "conditions": "AD LOW VIS PROC IN FORCE. VIS {visibility}M RVR {rvr}M"
    },

    "obstacle": {
      "temporary": "TEMPO OBST {type} {position} {height}M AGL {lighting}",
      "crane": "CRANE {position} {height}M AGL {lighting}",
      "permanent": "NEW OBST {type} {position} {height}M AGL"
    },

    "wildlife": {
      "birds": "BIRD ACTIVITY {location} {species}",
